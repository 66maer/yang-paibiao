# 应用配置
APP_NAME=小秧排表系统
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
# DATABASE_URL 会在 docker-compose 中通过环境变量设置
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT 配置
# SECRET_KEY 会在 docker-compose 中通过环境变量设置
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS 配置（测试模式：允许 HTTP 访问）
CORS_ORIGINS=["http://zyhm.fun", "http://www.zyhm.fun", "https://zyhm.fun", "https://www.zyhm.fun"]

# 日志配置
LOG_LEVEL=INFO

# 管理员默认配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_on_first_login
ADMIN_EMAIL=admin@zyhm.fun
